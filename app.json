{
  "expo": {
    "name": "الطريق إلي القرآن",
    "slug": "way2quran",
    "description": "استماع وتحميل تلاوات للقرآن الكريم من أنحاء العالم الإسلامي",
    "version": "1.0.1",
    "orientation": "default",
    "sdkVersion": "51.0.0",
    "icon": "./src/assets/images/android-icon.png",
    "scheme": "way2quran",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/images/bg.png",
      "resizeMode": "contain",
      "backgroundColor": "#fff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["audio"]
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "assetBundlePatterns": ["**/*"],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/android-icon.png",
        "backgroundColor": "#374151"
        // "backgroundColor": "#374151"
      },
      "package": "com.anasnady.way2quran",
      "permissions": ["ACCESS_FINE_LOCATION", "FOREGROUND_SERVICE", "WAKE_LOCK"]
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "48a677c9-bb19-490e-b5a3-4aab62d7536b"
      }
    }
  }
}
